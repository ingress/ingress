{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es2015.promise", "es2015.collection", "es2015.core", "es2015.iterable"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "lib"
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
