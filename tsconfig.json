{
  "root": true,
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "importsNotUsedAsValues": "remove",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "es2022"],
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ]
}
