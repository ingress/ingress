{
  "packages": [
    "packages/*"
  ],
  "npmClient": "npm",
  "version": "independent",
  "command": {
    "version": {
      "noPush": true,
      "tagVersionPrefix": "",
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "fromPackage": true,
      "ignoreChanges": [
        "*.md",
        "*.spec.ts",
        "*.test.ts"
      ],
      "message": "release: update package versions"
    }
  }
}
