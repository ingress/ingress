{
  "name": "@ingress/workspace",
  "private": true,
  "version": "0.0.1",
  "type": "commonjs",
  "workspaces": [
    "./packages/router-tree-map",
    "./packages/reflect-annotations",
    "./packages/core",
    "./packages/types",
    "./packages/http",
    "./packages/router",
    "./packages/ingress"
  ],
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "eslint \"./packages/**/src/**/*.ts\" --fix",
    "test": "npm run test --workspaces && npm run test:modules",
    "test:modules": "node scripts/test-exports.test.mjs",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "ncu": "npm exec --workspaces -c \"ncu\" && ncu",
    "ncuu": "npm exec --workspaces -c \"ncu -u\" && ncu -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-angular": "^16.2.1",
    "@swc/core": "^1.2.145",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "c8": "^7.11.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "~8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "node-dev": "^7.1.0",
    "npm-check-updates": "^12.4.0",
    "photofinish": "^1.8.0",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "shx": "^0.3.4",
    "ts-node": "git@github.com:calebboyd/ts-node.git#resolve-filename-dist",
    "tsconfig-paths": "^3.12.0",
    "typedoc": "^0.22.12",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ],
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "args": "after-used",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-warning-comments": 1,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
