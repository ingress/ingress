{
  "name": "@ingress/workspace",
  "private": true,
  "version": "0.0.1",
  "type": "commonjs",
  "packageManager": "pnpm@7.31.0",
  "exports": {
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint \"./packages/**/src/**/*.ts\" --fix",
    "test": "vitest --run && $npm_execpath run test:modules",
    "cov": "vitest --run --coverage && open coverage/index.html",
    "test:modules": "node scripts/test-exports.test.mjs",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-angular": "^17.7.0",
    "@ingress/cli": "workspace:*",
    "@ingress/core": "workspace:*",
    "@ingress/http": "workspace:*",
    "@ingress/router": "workspace:*",
    "@ingress/types": "workspace:*",
    "@swc/core": "^1.3.83",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "0.34.4",
    "concurrently": "^8.2.1",
    "create-ingress": "workspace:*",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "execa": "^8.0.1",
    "ingress": "workspace:*",
    "node-dev": "^8.0.0",
    "npm-check-updates": "^16.13.3",
    "prettier": "^3.0.3",
    "reflect-annotations": "workspace:*",
    "reflect-metadata": "^0.1.13",
    "router-tree-map": "workspace:*",
    "shx": "^0.3.4",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2",
    "vite-plugin-swc-only": "^0.1.18",
    "vitest": "^0.34.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ],
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "args": "after-used",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^[A-Z]"
        }
      ],
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-warning-comments": 1,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "dependencies": {
    "vite": "^4.4.9"
  }
}
