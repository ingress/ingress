{
  "name": "@ingress/workspace",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "./packages/http-status",
    "./packages/error",
    "./packages/di",
    "./packages/reflect-annotations",
    "./packages/core",
    "./packages/router-tree-map",
    "./packages/router",
    "./packages/http",
    "./packages/ingress"
  ],
  "exports": {
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "eslint \"./packages/**/src/**/*.ts\" --fix",
    "test": "npm run test --workspaces && tap",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "ncu": "npm exec --workspaces -c \"ncu\" && ncu",
    "ncuu": "npm exec --workspaces -c \"ncu -u\" && ncu -u"
  },
  "tap": {
    "coverage": false,
    "test-regex": "scripts\\/.*test\\.ts",
    "node-arg": [
      "--no-warnings",
      "--experimental-loader=ts-node/esm"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-angular": "^13.2.0",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "tap": "^15.0.10",
    "ts-node": "github:calebboyd/ts-node#resolve-filename-dist",
    "tsconfig-paths": "^3.11.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.2",
    "typescript": "4.4.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ],
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "args": "after-used",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-warning-comments": 1,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
