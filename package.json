{
  "name": "@ingress/workspace",
  "private": true,
  "version": "0.0.1",
  "type": "commonjs",
  "packageManager": "npm@8.15.1",
  "workspaces": [
    "./packages/router-tree-map",
    "./packages/reflect-annotations",
    "./packages/core",
    "./packages/types",
    "./packages/http",
    "./packages/router",
    "./packages/ingress"
  ],
  "exports": {
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "eslint \"./packages/**/src/**/*.ts\" --fix",
    "test": "npx vitest --run && npm run test:modules",
    "test:modules": "node scripts/test-exports.test.mjs",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "ncu": "npm exec --workspaces -c \"ncu\" && ncu",
    "ncuu": "npm exec --workspaces -c \"ncu -u\" && ncu -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-angular": "^17.4.4",
    "@swc/core": "^1.3.49",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-c8": "^0.30.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "node-dev": "^8.0.0",
    "npm-check-updates": "^16.10.8",
    "prettier": "^2.8.7",
    "reflect-metadata": "^0.1.13",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.24.1",
    "typedoc-plugin-markdown": "^3.15.1",
    "typescript": "^5.0.4",
    "vite-plugin-swc-only": "^0.1.17",
    "vitest": "^0.30.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "overrides": [
      {
        "files": [
          "**/*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ],
      "@typescript-eslint/no-unused-vars": [
        2,
        {
          "args": "after-used",
          "ignoreRestSiblings": true,
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^[A-Z]"
        }
      ],
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "no-warning-comments": 1,
      "one-var": [
        "error",
        "consecutive"
      ]
    }
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
